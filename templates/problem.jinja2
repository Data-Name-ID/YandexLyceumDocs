{% extends "base.jinja2" %}
{% block title %}Задача "{{ problem.title }}"{% endblock %}

{% block custom_css %}
	<link rel="stylesheet" href="/css/vendors.css">
{% endblock %}

{% block content %}
	<div class="layout problem-details">
		<div class="layout__wrapper">
			<nav class="yd407c--arrow-navigation problem-details__navigation">
				{% if previous_id %}
					<a class="yd407c--arrow-navigation__arrow yd407c--arrow-navigation__arrow_direction_left problem-details__arrow problem-details__arrow_direction_left"
					   href="../{{ previous_id }}">
                    <span data-lego="react"
                          class="icon icon_type_scroll icon_direction_left icon_size_l"></span></a>
				{% endif %}
				{% if next_id %}
					<a class="yd407c--arrow-navigation__arrow yd407c--arrow-navigation__arrow_direction_right problem-details__arrow problem-details__arrow_direction_right"
					   href="../{{ next_id }}">
                        <span data-lego="react"
                              class="icon icon_type_scroll icon_direction_right icon_size_l"></span></a>
				{% endif %}
			</nav>
			<main class="layout__main problem-details__main-area">
				<a class="nav-tab nav-tab_back nav-tab_view_button"
				   href="../..">
					<span data-lego="react"
					      class="icon icon_type_arrow-short icon_direction_left icon_size_s nav-tab__arrow-icon"></span>
					<span class="nav-tab__inner">Урок {{ lesson.short_title }}</span>
				</a>
				<header class="yde1c4--task-header">
					<h1 class="heading heading_level_1 yde1c4--task-header__heading">{{ problem.title }}</h1>
					<div class="yde1c4--task-header__info">
						<div class="y43a24--task-info">
							<div class="y43a24--task-info__tag"><span
									class="task-tag task-tag_type_{{ task_group.type }} task-tag_size_m"></span>
								<div class="y43a24--task-info__tag-name">{{ sections_types[task_group.type] }}</div>
							</div>
						</div>
					</div>
				</header>
				<div class="problem-run">

					<div class="problem-run__problem">
						<div class="problem">
							{% for paragraph in paragraphs %}
								<div class="problem-block_kind_text">
									<div class="Markdown">
										<div class="paragraph">{{ paragraph['text'] }}
											{% for resource_id in paragraph['resources_id'] %}
												<img class="resource__image"
												     src="{{ resources[resource_id].url }}"
												     alt="{{ resources[resource_id].name }}">
											{% endfor %}
										</div>
									</div>
								</div>
							{% endfor %}
							</div>
						</div>
					</div>
			</main>
		</div>
		<aside class="layout__active-area">
			<nav class="yd609d--task-group-navigation">
				<ul class="yd609d--task-group-navigation__groups">
					{% for task_group in task_groups %}
						<li class="yd609d--task-group-navigation__group"><span
								class="task-tag task-tag_type_{{ task_group.type }} task-tag_size_l yd609d--task-group-navigation__tag"
								tabindex="{{ 8 }}"></span>
							<ul class="yd609d--task-group-navigation__tasks">
								{% for now_task in task_group.problems %}
									<li class="yd609d--task-group-navigation__task">
										{% if now_task.id == problem.id %}
											<a class="yd609d--task-group-navigation__link  yd609d--task-group-navigation__link_checked"
											   href="../{{ now_task.id }}">
												<div class="indicator indicator_color_grey indicator_size_xs"></div>
											</a>
										{% else %}
											<a class="yd609d--task-group-navigation__link"
											   href="../{{ now_task.id }}">
												<div class="indicator indicator_color_grey indicator_size_xs"></div>
											</a>
										{% endif %}
									</li>
								{% endfor %}
							</ul>
						</li>
					{% endfor %}
				</ul>
			</nav>
		</aside>
	</div>
{% endblock %}
